# mutt color scheme

color  normal  default default
#color  index  cyan default  ~N
color  index  red default  ~F
color  index  blue default ~T
color  body  yellow default  (https?|ftp)://[\-\.+,/%~_:?&=\#a-zA-Z0-9]+
color  body  green default  [\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+
color  attachment  magenta default
color  signature  yellow default
color  search  brightred black

color  index_date  blue default
color  index_subject  blue default  '~s\(.*\)'
color  index_flags  green default  '~N'
color  index_flags  red default  '~D'

color  indicator  black blue
color  error  red default
color  status  white black
color  tree  cyan default
color  tilde  black default

color  hdrdefault  cyan default
#color  header  yellow default "From:"
#color  header  yellow default "Subject:"

color  quoted  green default
color  quoted1  blue default
color  quoted2  magenta default
color  quoted3  yellow default
color  quoted4  red default
color  quoted5  blue default

color  body  green default  "^gpg: Good signature from"
